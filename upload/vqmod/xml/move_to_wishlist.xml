	}			
	public function atw() {
		$this->language->load('account/wishlist');
		
		$json = sprintf($this->language->get('text_wishlist'), (isset($this->session->data['wishlist']) ? count($this->session->data['wishlist']) : 0));
		
		$this->response->setOutput($json);	
            ]]></add>
